<%= javascript_pack_tag 'search_category' %>

<%= form_with model: @flow, url: flows_path, method: :post do |f| %>
 <div class="field">
    <%= f.label :date, class: "form-label" %>
    <%= f.date_field :date %>
  </div> 

  <div class="field">
    <%= f.label :kind, class: "form-label" %>
    <%= f.select :kind, {'支出': 1, '収入': 0}, {include_blank: '選択してください'} %>
  </div>

  <div class="field">
    <%= f.label :category, class: "form-label" %>
    <%= f.select :category_id, {}, {include_blank: '選択してください'} %>
  </div>

  <div class="field">
    <%= f.label :money, class: "form-label" %>
    <%= f.number_field :money %>
  </div>

  <div class="field">
    <%= f.label :memo, class: "form-label" %>
    <%= f.text_field :memo %>
  </div>

  <%= f.submit "登録する", class:"btn btn-success" %>
<% end %>
